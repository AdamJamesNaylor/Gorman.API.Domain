{
  "id": 123,
  "name": "Example plan name", //prefer name to title as it's more generalised
  "mapId": 456,
  "userId": 789,
  "access": "Public",
  "steps": [
    {
      "id": 111,
      "name": "Step 1", //if steps don't have a name saved against them they will default to their index prefixed with the word Step
      "index": 1, //1 based so that the naming works.
      "units": [
        {
          "guid": "xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx", //a guid for the unit must be specified (and therefore generated) by the client.
          "image": "http://someimage.png", //optional, if there is no image specified it will retain it's previous image. If first time encountered a default is used. If different to previous, it will update.
          "position": {
            "x": 1,
            "y": 2
          }, //could include scale and rotation here
          "destination": {
            "x": 1,
            "y": 2
          } //position and destination form the basis for direction of travel. If no destination is present the unit will not move.

        }
      ]

    }
  ]
}
